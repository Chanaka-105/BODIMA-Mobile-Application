<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/txt_id"
        android:fontFamily="sans-serif-condensed"
        android:layout_width="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_height="60dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/linearbackground"
        android:layout_marginBottom="10dp"
        android:textSize="40dp"
        android:textAlignment="center"/>
    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="30dp"
        android:visibility="gone" />

    <TextView
        android:id="@+id/txt_presentation_groupe"
        android:layout_below="@id/txt_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginBottom="15dp"
        android:text="Your Group User ID"
        android:textSize="15dp"
        android:fontFamily="monospace"
        android:textStyle="bold"
        android:textAlignment="center"/>

    <Button
        android:id="@+id/btn_copy_id"
        android:layout_below="@id/txt_presentation_groupe"
        android:layout_width="fill_parent"
        android:layout_marginLeft="10dp"
        android:textColor="@color/white"
        android:background="@drawable/dialog_button"
        android:layout_marginRight="10dp"
        android:layout_height="60dip"
        android:text="Copy to Clipboard"
        android:textSize="18sp"
        android:fontFamily="sans-serif-smallcaps"
        android:stateListAnimator="@null"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/btn_exit"
        android:layout_below="@id/btn_copy_id"
        android:layout_width="fill_parent"
        android:layout_marginTop="10dp"
        android:background="@drawable/dialog_button"
        android:textColor="@color/white"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:layout_height="60dip"
        android:text="Return"
        android:textSize="18sp"
        android:fontFamily="sans-serif-smallcaps"
        android:stateListAnimator="@null"
        android:textAllCaps="false" />

</RelativeLayout>